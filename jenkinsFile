podTemplate(label: 'docker-build', 
  containers: [
    containerTemplate(
      name: 'git',
      image: 'alpine/git',
      command: 'cat',
      ttyEnabled: true
    ),
    containerTemplate(
      name: 'docker',
      image: 'docker',
      command: 'cat',
      ttyEnabled: true
    ),
  ],
  volumes: [ 
    hostPathVolume(mountPath: '/var/run/docker.sock', hostPath: '/var/run/docker.sock'), 
  ]
) {
    node('docker-build') {
	         

       
        stage('Checkout'){
            container('git'){
                checkout scm
            }
        }
        
        stage('Build'){ 
	
	steps {
                container('docker') {
                    sh "docker build --network host -t test ."
                    sh "docker images"
                }
            }

        }
        
        stage('Push'){
            container('docker'){
                script {
                    docker.withRegistry('https://873563726923.dkr.ecr.ap-northeast-2.amazonaws.com','ecr:ap-northeast-2:team4test'){
                        app.push("${env.BUILD_NUMBER}")
                        app.push("latest")
                    }
                }
            }
        }
    }
    
}
