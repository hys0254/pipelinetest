import java.text.SimpleDateFormat

podTemplate(label: 'docker-build', 
  containers: [
    containerTemplate(
      name: 'git',
      image: 'alpine/git',
      command: 'cat',
      ttyEnabled: true
    ),
    containerTemplate(
      name: 'docker',
      image: 'docker',
      command: 'cat',
      ttyEnabled: true
    ),
    containerTemplate(
      name: 'maven', 
      image: 'maven:3.3.9-jdk-8-alpine', 
      ttyEnabled: true,  
      command: 'cat'
    )
  ],
  volumes: [ 
    hostPathVolume(mountPath: '/var/run/docker.sock', hostPath: '/var/run/docker.sock'), 
  ]
) {
    node('docker-build') {
	def appImage

       
        stage('Checkout'){
            container('git'){
                checkout scm
            }
        }
	
	stage('Build Maven'){
	    container('maven'){
		sh 'mvn -B clean install'
	    }
	}

        
        stage('Build'){
            container('docker'){
                script {
                    appImage = docker.build("873563726923.dkr.ecr.ap-northeast-2.amazonaws.com/tea4testecr:${BUILD_NUMBER}","--network host -f Dockerfile .")


		      }
            }
        }
        
        stage('Push'){
            container('docker'){
                script {
                    docker.withRegistry('https://873563726923.dkr.ecr.ap-northeast-2.amazonaws.com','ecr:ap-northeast-2:team4test'){
                        appImage.push("${env.BUILD_NUMBER}")
                        appImage.push("latest")
                    }

                }
            }
        }

	stage('Src Checkout') {
		git branch: 'master',
		credentialsId: 'jenkins',
		url: 'https://github.com/hys0254/gitops_kustomize.git'
	}
	
    
    
  	stage('Update image tag') {
  	    
        withCredentials([usernamePassword(credentialsId: 'accessgit',
            usernameVariable: 'GIT_USER', passwordVariable: 'GIT_PWD')]) {

            def encodedPassword = URLEncoder.encode("$GIT_PWD",'UTF-8')
            def gitUrl = "https://$GIT_USER:$encodedPassword@github.com/hys0254/gitops_kustomize.git"
            def registry = "873563726923.dkr.ecr.ap-northeast-2.amazonaws.com"
            
            dir("user-api") {
              sh "git pull $gitUrl"
              sh """
                    cd ./dev && ~/kustomize edit set image \
                    user-api=$registry/tea4testecr:${env.BUILD_NUMBER} \
                """
              sh "git add -A"
              sh "git commit -m '[DEV][USER-API] updated tag: ${BUILD_NUMBER}'"
              sh "git push $gitUrl || echo 'no changes'"
            }
        }
    }
}
}

